- title "Sign In"
.row
  .twelve.columns
    .wrapper.light
      .row
        .six.columns
          .ten.columns.centered
            h2.centalign Sign in
            = form_for resource, as: resource_name, url: session_path(resource_name) do |f|
              ul
                li.field
                  = f.email_field :email, :autofocus => true, class: [:xxwide, :text, :input], placeholder: "Email"
                li.field
                  = f.password_field :password, class: [:input, :text, :xxwide], placeholder: "Password"
                - if devise_mapping.rememberable?
                  li.field.passless.marginless.pull_right
                    label.checkbox for="user_remember_me" 
                      = f.check_box :remember_me
                      span
                      | &nbsp; Remember me
                li= render "devise/shared/links"
              br/
              .medium.primary.btn.pull_right
                = f.submit 'Sign in'
        br.poofin style="display:none;"
        = render "devise/registrations/new"
