<div class="row centalign">
  <h2>Update Your Profile</h2>
</div>
<div class="row">
  <div class="twelve columns">
    <%= form_for @user, url: user_path(id: @user.id) do |f| %>
      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: :input %>
      </div>
      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: :input %>
      </div>
      <%= fields_for @profile, url: recipient_profile_path(id: @profile.id) do |ff| %>

        <div class="field">
          <%= ff.label :started_teaching, "Started Teaching:" %>
          <%= ff.date_select :started_teaching, order: [:year] %>
        </div>
        <div class="field">
          <%= ff.label :subject, "Subject You Teach" %>
          <%= ff.text_field :subject, class: :input %>
        </div>
        <div class="field">
          <%= ff.label :grade, "Grade You Teach" %>
          <%= ff.text_field :grade, class: :input %>
        </div>        
        <div class="field">
          <%= ff.label :about, "About" %>
          <%= ff.text_area :about, class: [:textarea, :input], rows: 3 %>
        </div>
      <% end %>
      <div class="medium primary btn pull_right">
        <%= f.submit "Save!" %>
      </div>
    <% end %>
  </div>
</div>
